#import nltk
import codecs

#en_lines = [line.strip() for line in open('en.txt')]
#sp_lines = [line.strip() for line in open('sp.txt')]

def para(lines):
  para = ''
  for l in lines:
    para = para + ' ' + l
    if l == '':
      yield para.strip()
      para = ''

def flatten(l):
  out = []
  for item in l:
    if isinstance(item, (list, tuple)):
      out.extend(flatten(item))
    else:
      out.append(item)
  return out

dict = [line.strip() for line in codecs.open('dict.txt', 'r', 'utf-8')]
for l in dict:
  words = l.split("\t")

  # dictionary shows synonyms
  en_words = [w.strip() for w in words[0].split(";")]

  # discard parts of speech and handle synonyms
  sp_words = flatten([w.split('-')[0].split(";") for w in words[1:]])
  print "English: "
  print en_words
 
  print "Spanish:"
  print sp_words
